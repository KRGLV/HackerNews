{
    "name": "hacker-news",
    "version": "1.0.0",
    "description": "Hacker News Application Using ReactJS and Express Server Side Render",
    "author": "KRGLV",
    "license": "MIT",
    "main": "src/index.js",
    "scripts": {
        "build": "webpack --mode=production && npm run copy_static_assets",
        "dev": "webpack && npm run copy_static_assets && concurrently \"webpack --watch\" \"nodemon dist\"",
        "test": "npm run webpack && concurrently \"npm run webpack --watch\" \"mocha --watch\"",
        "start": "SET NODE_ENV=production && node dist/index.js",
        "copy_static_assets": "node copyStaticAssets.js",
        "webpack": "webpack --config webpack.tests.js"
    },
    "keywords": [
        "ReactJS"
    ],
    "dependencies": {
        "@babel/polyfill": "^7.10.1",
        "express": "^4.17.1",
        "memory-cache": "^0.2.0",
        "node-fetch": "^2.6.0",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "react-router-dom": "^5.2.0",
        "react-vis": "^1.11.7"
    },
    "devDependencies": {
        "@babel/core": "^7.10.3",
        "@babel/preset-env": "^7.10.3",
        "@babel/preset-react": "^7.10.1",
        "babel-loader": "^8.1.0",
        "chai": "^4.2.0",
        "concurrently": "^5.2.0",
        "css-loader": "^3.6.0",
        "enzyme": "^3.11.0",
        "enzyme-adapter-react-16": "^1.15.2",
        "mocha": "^8.4.0",
        "nodemon": "^2.0.4",
        "style-loader": "^1.2.1",
        "webpack": "^4.43.0",
        "webpack-cli": "^3.3.12",
        "webpack-node-externals": "^1.7.2"
    }
}
